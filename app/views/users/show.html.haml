= provide(:title, "#{@user.email}")

%p= link_to 'Back to all users', users_path

%h1.text-center #{ @user.email }

%p
  = link_to 'Edit', edit_user_path(@user), class: 'btn btn-default'
  - if @user.email != current_user.email
    = link_to 'Delete', user_path(@user), method: :delete, class: 'btn btn-default',
    data: { confirm: "Are you sure you want to delete #{ @user.email }?" }

.table-responsive
  %table.table.table-bordered.table-striped#view-margin
    %tr
      %td.col-md-6
        %strong Email
      %td.col-md-6
        = @user.email
    %tr
      %td.col-md-6
        %strong Name
      %td.col-md-6
        = @user.name
    %tr
      %td.col-md-6
        %strong Role
      %td.col-md-6
        = @user.division
    %tr
      %td.col-md-6
        %strong State
      %td.col-md-6
        = @user.state
    %tr
      %td.col-md-6
        %strong Approved?
      %td.col-md-6
        = @user.approved
    %tr
      %td.col-md-6
        %strong Admin?
      %td.col-md-6
        = @user.admin

%p= link_to 'Back to all users', users_path

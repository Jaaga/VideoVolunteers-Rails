= provide(:title, "States")

%h1.text-center All States

= will_paginate @states
.table-responsive
  %table.table.table-bordered.table-striped
    %thead
      %tr
        - @columns.each do |column|
          %th
            = state_name_modifier(column)
    %tbody
      - @states.each do |state|
        %tr
          %td.col-sm-4= link_to state.name, state
          %td.col-sm-4= state.state_abb
          - if state.roi == true
            %td.col-sm-4 Yes
          - else
            %td.col-sm-4
          

= will_paginate @states

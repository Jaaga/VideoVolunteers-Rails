= provide(:title, "#{@state.state}")

%p
  = link_to 'Back to all states', states_path

%h1 #{ @state.state }

%p
  = link_to 'Edit', edit_state_path(@state), class: 'btn btn-default'

.table-responsive
  %table.table.table-bordered.table-striped#view-margin
    - @columns.each do |column|
      %tr
        %td.col-sm-6
          %strong= name_modifier(column)
        %td.col-sm-6
          = @state.send(:"#{ column }")
= link_to 'Delete', state_path(@state), method: :delete, class: 'btn btn-default',
  data: { confirm: "Are you sure you want to delete #{ @state.state }?" }
